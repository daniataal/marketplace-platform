generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Deal {
  id                String      @id @default(uuid())
  externalId        String      @unique
  company           String
  commodity         String
  quantity          Float
  availableQuantity Float       @default(0) @map("available_quantity")
  pricePerKg        Float
  discount          Float
  status            String      @default("OPEN") // OPEN, CLOSED, EXPORTED
  deliveryLocation  String      @default("Dubai")
  incoterms         String      @default("CIF") // CIF, FOB, EXW, etc.
  type              String      @default("BULLION") // BULLION, DORE
  purity            Float       @default(0.9999) // 0.9999 for Bullion, 0.916 for 22k, etc.
  pricingModel      String      @default("FIXED") // FIXED, DYNAMIC
  marketPrice       Float       @default(0) // LBMA price at creation (for reference or fixed deals)
  frequency         String      @default("SPOT") // SPOT, WEEKLY, BIWEEKLY, MONTHLY, QUARTERLY
  totalQuantity     Float?      // Total quantity over the contract duration
  contractDuration  Int         @default(1) // Duration in years (default 1 for periodic)
  extensionYears    Int         @default(5) // Rolling extensions in years
  totalValue        Float       @default(0) // Snapshot of periodic value
  annualValue       Float       @default(0) // Snapshot of annual value
  
  // Crowdfunding export parameters (defaults for when purchases are exported)
  cfRisk            String      @default("Low") // Risk level for crowdfunding
  cfTargetApy       Float       @default(12.5) // Target APY for investors
  cfDuration        Int         @default(12) // Campaign duration in months
  cfMinInvestment   Float       @default(500) // Minimum investment amount
  cfOrigin          String      @default("") // Origin location
  cfOriginPort      String      @default("") // Origin Port
  cfTransportMethod String      @default("Air Freight") // Transport method
  cfIcon            String      @default("gold-bar") // Icon for crowdfunding listing
  
  // Seller attributes for SPA
  sellerAddress         String?
  sellerTradeLicense    String?
  sellerRepresentative  String?
  sellerPassportNumber  String?
  sellerPassportExpiry  String?
  sellerCountry         String?
  sellerTelephone       String?
  sellerEmail           String?
  
  sellerId          String?
  seller            SellerIdentity? @relation(fields: [sellerId], references: [id])
  
  crowdfundingId    String?
  buyerId           String?
  buyer             User?       @relation("DealBuyer", fields: [buyerId], references: [id])
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  purchases         Purchase[]
  pendingExports    PendingExport[]
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  role          String    @default("USER") // USER, ADMIN
  balance       Float     @default(0)
  deals         Deal[]    @relation("DealBuyer")
  purchases     Purchase[]
  walletFrozen  Boolean   @default(false) // Admin can freeze wallet to prevent transactions
  transactions  Transaction[]
  notifications Notification[]
  
  // KYC details
  kycStatus     String    @default("PENDING") // PENDING, SUBMITTED, APPROVED, REJECTED
  firstName     String?
  lastName      String?
  address       String?
  phoneNumber   String?
  passportNumber String?
  passportExpiry String? // ISO date string or similar
  nationality   String?
  kycDocuments  Json?     // Store URLs or metadata for uploaded docs
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  type      String   // INFO, SUCCESS, WARNING, ERROR
  link      String?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([isRead])
}

model Transaction {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // DEPOSIT, WITHDRAWAL, PURCHASE, SALE
  amount    Float
  status    String   @default("COMPLETED") // PENDING, COMPLETED, FAILED
  reference String?  // Bank Ref, Deal ID, etc.
  createdAt DateTime @default(now())

  @@index([userId])
}

model Purchase {
  id               String   @id @default(uuid())
  dealId           String
  buyerId          String
  quantity         Float
  pricePerKg       Float
  totalPrice       Float
  deliveryLocation String
  status           String   @default("PENDING") // PENDING, CONFIRMED, SHIPPED, DELIVERED
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  // Logistics tracking (admin-only)
  logisticsCompany String?  // Loomis International, Brinks, G4S, Malca-Amit, etc.
  trackingNumber   String?  // Tracking number from logistics company
  shippedAt        DateTime? // When package was shipped
  deliveredAt      DateTime? // When package was delivered
  logisticsNotes   String?  @db.Text // Admin notes about logistics
  
  deal             Deal     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  buyer            User     @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  pendingExports   PendingExport[]
  agreement        Agreement?
  
  @@index([dealId])
  @@index([buyerId])
}

model Agreement {
  id            String   @id @default(uuid())
  purchaseId    String   @unique
  purchase      Purchase @relation(fields: [purchaseId], references: [id], onDelete: Cascade)
  buyerName     String
  sellerName    String
  agreementDate DateTime @default(now())
  spaData       Json?    // Snapshot of all variables used to generate the SPA
  terms         String?  @db.Text
  status        String   @default("DRAFT") // DRAFT, SIGNED
  pdfUrl        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model PendingExport {
  id                String   @id @default(uuid())
  purchaseId        String
  dealId            String
  purchase          Purchase @relation(fields: [purchaseId], references: [id], onDelete: Cascade)
  deal              Deal     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  
  // Editable crowdfunding parameters
  cfType            String   @default("Metals")
  cfName            String
  cfIcon            String
  cfRisk            String
  cfTargetApy       Float
  cfDuration        Int
  cfMinInvestment   Float
  cfAmountRequired  Float
  cfDescription     String   @db.Text
  cfOrigin          String
  cfDestination     String
  cfTransportMethod String
  cfMetalForm       String
  cfPurityPercent   Float
  
  status            String   @default("PENDING") // PENDING, APPROVED, REJECTED, EXPORTED
  crowdfundingId    String?  // Set after successful export
  reviewedBy        String?  // Admin who reviewed
  reviewedAt        DateTime?
  rejectionReason   String?  @db.Text // Reason for rejection
  exportedAt        DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([purchaseId])
  @@index([dealId])
  @@index([status])
}


model SellerIdentity {
  id                String   @id @default(cuid())
  alias             String?  // Internal name
  companyName       String
  logo              String?  // URL to logo image
  originCountry     String?
  originPort        String?
  address           String?
  tradeLicense      String?
  representative    String?
  passportNumber    String?
  passportExpiry    String?
  country           String?
  telephone         String?
  email             String?
  deals             Deal[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
